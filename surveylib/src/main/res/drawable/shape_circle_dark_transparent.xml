<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorDarkTransparent" />
            <!-- Set the same value for both width and height to get radio_selected circular shape -->
            <size
                android:width="40dp"
                android:height="40dp" />
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />
        </shape>
    </item>

    <item>

        <bitmap
            android:src="@drawable/icon_check_48"
            android:gravity="center" />
    </item>

</layer-list>