<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_inc_dec_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layout_ic_dec_imgFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/female_img"/>

        <ImageView
            android:id="@+id/layout_inc_dec_imgMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/male_img" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorSilver"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/layout_ibMinusFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_circle_dark"
                android:padding="5dp"
                android:src="@drawable/icon_minus_24" />

            <TextView
                android:id="@+id/layout_inc_dec_txtFemaleCount"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_toLeftOf="@+id/layout_inc_dec_ibPlusFemale"
                android:layout_toRightOf="@+id/layout_ibMinusFemale"
                android:gravity="center"
                android:text="1"
                android:textColor="#26262E"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/layout_inc_dec_ibPlusFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_circle_white"
                android:padding="5dp"
                android:src="@drawable/icon_plus_24" />

        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#515155"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/layout_inc_dec_ibMinusMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_circle_dark"
                android:padding="5dp"
                android:src="@drawable/icon_minus_24" />

            <TextView
                android:id="@+id/layout_inc_dec_txtMaleCount"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_toLeftOf="@+id/layout_inc_dec_ibPlusMale"
                android:layout_toRightOf="@+id/layout_inc_dec_ibMinusMale"
                android:gravity="center"
                android:text="0"
                android:textColor="#26262E"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/layout_inc_dec_ibPlusMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_circle_white"
                android:padding="5dp"
                android:src="@drawable/icon_plus_24" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>